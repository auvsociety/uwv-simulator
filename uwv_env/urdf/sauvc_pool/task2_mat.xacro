<?xml version="1.0" encoding="utf-8"?>

<robot name="task2_mat" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Macros to add tubs onto the mat  -->
  <xacro:macro name="tub_link_red" params="id xyz">
		<link name="tub_${id}">
			<inertial>
			  <origin
				xyz="0 0.1121 0"
				rpy="0 0 0" />
			  <mass
				value="57.465" />
			  <inertia
				ixx="2.4157"
				ixy="-5.5456E-16"
				ixz="6.1062E-16"
				iyy="3.7023"
				iyz="1.205E-15"
				izz="2.4157" />
			</inertial>
			<visual>
			  <origin
				xyz="0 0 0"
				rpy="0 0 0" />
			  <geometry>
				<mesh
				  filename="package://uwv_env/meshes/sauvc_pool/tub.STL" />
			  </geometry>
			  <material
				name="">
				<color
				  rgba="1 0 0 1" />
			  </material>
			</visual> 
			<collision>
			  <origin
				xyz="0 0 0"
				rpy="0 0 0" />
			  <geometry>
				<mesh
				  filename="package://uwv_env/meshes/sauvc_pool/tub.STL" />
			  </geometry>
			</collision>              
        </link>
        
        <joint name="tub_${id}_joint" type="fixed">
            <parent link="base_link"/>
            <child link="tub_${id}"/>
            <origin rpy="1.5708 0 0" xyz="${xyz}"/>
        </joint>      
        
        <gazebo reference="tub_${id}">
			<material>
				Gazebo/Red
			</material>
		</gazebo>
		        
    </xacro:macro>   
    
