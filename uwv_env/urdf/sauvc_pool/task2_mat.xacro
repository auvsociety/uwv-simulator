    </xacro:macro> 
     	
  <link name="base_link">
    <inertial>
      <origin
        xyz="0 0.0005 0"
        rpy="0 0 0" />
      <mass
        value="126.4" />
      <inertia
        ixx="42.133"
        ixy="0"
        ixz="0"
        iyy="716.27"
        iyz="0"
        izz="674.13" />
    </inertial>
    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://uwv_env/meshes/sauvc_pool/mat.STL" />
      </geometry>
      <material
        name="">
        <color
          rgba="0.64706 0.61961 0.58824 1" />
      </material>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://uwv_env/meshes/sauvc_pool/mat.STL" />
      </geometry>
    </collision>
  </link>
  
    <gazebo reference="base_link">
		<material>
			Gazebo/Green
		</material>
	</gazebo>
	
  
  <xacro:tub_link_blue id="1" xyz="-3 0 0.001"/>
  <xacro:tub_link_red id="2" xyz="-1 0 0.001"/>
  <xacro:tub_link_red id="3" xyz="1 0 0.001"/>
  <xacro:tub_link_red id="4" xyz="3 0 0.001"/>
  
</robot>
